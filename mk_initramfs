#!/usr/bin/env bash
set -Eex

[ -d initramfs ] && rm -r initramfs
mkdir initramfs

cp "$1" ./initramfs/init
cp "$2" ./initramfs/nomad
cd initramfs
fakeroot -- << SCRIPT
mkdir -p dev
mknod ./dev/console c 5 1
chown root init
find . | cpio -H newc -o > ../initramfs.cpio
SCRIPT

cd ..
rm -r initramfs
#cat initramfs.cpio | gzip > initramfs.igz
