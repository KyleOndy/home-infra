#!/usr/bin/env bash
set -Eeuo pipefail

usage() {
  echo "$0 <chroot>"
  echo "    output: path to ramroot.tar.gz"
}

if [[ "$#" -ne 1 ]]; then
  usage
  exit 1
fi

chroot="$1"

# listed in rought how confident I am each line isn't goring to break something
paths=(
"/boot/*"
"/var/cache"

)

for p in "${paths[@]}"; do
  sudo rm -r "${chroot}"${p}
done
